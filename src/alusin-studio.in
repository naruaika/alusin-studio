import os
import sys
import signal
import locale
import gettext

VERSION    = '@VERSION@'
pkgdatadir = '@pkgdatadir@'
localedir  = '@localedir@'

sys.path.insert(1, pkgdatadir)
signal.signal(signal.SIGINT, signal.SIG_DFL)
locale.bindtextdomain('alusin-studio', localedir)
locale.textdomain('alusin-studio')
gettext.install('alusin-studio', localedir)

if __name__ == '__main__':
    import gi

    gi.require_version('Gtk', '4.0')
    gi.require_version('Adw', '1')

    from gi.repository import Gio
    resource_path = os.path.join(pkgdatadir, 'alusin-studio.gresource')
    resource = Gio.Resource.load(resource_path)
    resource._register()

    from alusin_studio import main
    sys.exit(main.main(VERSION))
